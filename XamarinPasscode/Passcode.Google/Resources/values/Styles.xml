<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<style name="PasscodeHeader">
		<item name="android:textSize">22dp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:text">@string/PasscodeHeader</item>
	</style>

	<style name="PasscodeFillableLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">12dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="PasscodeNumberButton">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:background">@drawable/passcode_buttonstates</item>
		<item name="android:textColor">@drawable/passcode_buttoncolors</item>
	</style>

	<style name="PasscodeSmallButton" parent="@style/PasscodeNumberButton">
		<item name="android:background">@null</item>
		<item name="android:textColor">@null</item>
	</style>

	<style name="PasscodeSmallCircle">
		<item name="android:layout_width">26dp</item>
		<item name="android:layout_height">26dp</item>
		<item name="android:layout_margin">4dp</item>
		<item name="android:background">@drawable/passcode_buttonstates</item>
	</style>

	<style name="PasscodeNumberLayout">
		<item name="android:layout_margin">12dp</item>
		<item name="android:id">@+id/passcode_bottomlayout</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
	</style>

	<style name="PasscodeContainer">
	</style>


</resources>
